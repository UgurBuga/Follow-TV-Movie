<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FollowTvMovie" parent="BaseThemeFollowTvMovie" />

    <style name="BaseThemeFollowTvMovie" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/tertiary_color</item>
        <item name="colorPrimaryVariant">@color/tertiary_color</item>
        <item name="colorOnPrimary">@color/tertiary_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/tertiary_color</item>
        <item name="colorSecondaryVariant">@color/tertiary_color</item>
        <item name="colorOnSecondary">@color/tertiary_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/quaternary_color</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/grey_100</item>

        <item name="ftmTextInputLayout">@style/FTMTextInputLayout</item>
        <item name="ftmTextInputDropdownLayout">@style/FTMTextInputDropdownLayout</item>
        <item name="ftmTextInputEditText">@style/FTMTextInputEditText</item>
        <item name="ftmRadioButton">@style/FTMRadioButton</item>
        <item name="ftmButton">@style/FTMButton</item>
        <item name="ftmToolbar">@style/FTMToolbar</item>
        <item name="actionMenuTextAppearance">@style/FTMToolbarMenuStyle</item>
        <item name="ftmCheckBox">@style/FTMCheckBox</item>
        <item name="ftmTextView">@style/FTMText.Regular.15</item>
        <item name="ftmSwitchView">@style/FTMSwitchView</item>
        <item name="ftmCardView">@style/FTMCardView</item>
        <item name="bottomNavigationStyle">@style/FTMBottomNavigationView</item>

    </style>
</resources>