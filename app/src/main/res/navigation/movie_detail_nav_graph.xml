<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movie_detail_nav_graph"
    app:startDestination="@id/movieDetailFragment">

    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="com.ugurbuga.followtvmovie.ui.moviedetail.MovieDetailFragment"
        tools:layout="@layout/fragment_movie_detail">

        <argument
            android:name="arg_id"
            app:argType="string" />

        <argument
            android:name="arg_image_url"
            app:argType="string" />

        <action
            android:id="@+id/action_review_fragment"
            app:destination="@id/reviewBottomSheet" />

        <action
            android:id="@+id/action_movie_detail_to_trailer"
            app:destination="@id/trailerActivity" />

        <action
            android:id="@+id/action_movie_detail_to_person_detail"
            app:destination="@id/personDetailFragment" />

        <action
            android:id="@+id/action_movie_detail_to_image"
            app:destination="@id/imageFragment" />

        <action
            android:id="@+id/action_movie_detail_to_web"
            app:destination="@id/webViewFragment" />

    </fragment>

    <activity
        android:id="@+id/trailerActivity"
        android:name="com.ugurbuga.followtvmovie.ui.trailer.TrailerActivity"
        tools:layout="@layout/activity_trailer">

        <argument
            android:name="arg_url_key"
            app:argType="string" />
    </activity>

    <fragment
        android:id="@+id/personDetailFragment"
        android:name="com.ugurbuga.followtvmovie.ui.person.PersonDetailFragment"
        tools:layout="@layout/fragment_person_detail">

        <action
            android:id="@+id/action_person_detail_to_movie_detail"
            app:destination="@id/movieDetailFragment" />

        <action
            android:id="@+id/action_person_detail_to_image"
            app:destination="@id/imageFragment" />

        <argument
            android:name="arg_person_id"
            app:argType="string" />

        <argument
            android:name="arg_image_url"
            app:argType="string" />

    </fragment>

    <fragment
        android:id="@+id/imageFragment"
        android:name="com.ugurbuga.followtvmovie.ui.image.ImageFragment"
        tools:layout="@layout/fragment_image">

        <argument
            android:name="arg_images"
            app:argType="com.ugurbuga.followtvmovie.domain.moviedetail.image.ImageUIModel[]" />

        <argument
            android:name="arg_position"
            app:argType="integer" />

    </fragment>

    <dialog
        android:id="@+id/reviewBottomSheet"
        android:name="com.ugurbuga.followtvmovie.ui.moviedetail.review.ReviewBottomSheet"
        tools:layout="@layout/bottom_sheet_review">

        <argument
            android:name="arg_id"
            app:argType="string" />
    </dialog>

    <fragment
        android:id="@+id/webViewFragment"
        android:name="com.ugurbuga.followtvmovie.ui.webview.WebViewFragment"
        tools:layout="@layout/fragment_web_view">

        <argument
            android:name="arg_url"
            app:argType="string" />
    </fragment>

</navigation>
