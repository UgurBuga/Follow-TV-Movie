<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/discover_nav_graph"
    app:startDestination="@id/discoverFragment">

    <fragment
        android:id="@+id/discoverFragment"
        android:name="com.ugurbuga.followtvmovie.ui.discover.DiscoverFragment"
        tools:layout="@layout/fragment_discover" />

    <action
        android:id="@+id/action_to_movieDetailFragment"
        app:destination="@id/movieDetailFragment" />

    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="com.ugurbuga.followtvmovie.ui.moviedetail.MovieDetailFragment"
        tools:layout="@layout/fragment_movie_detail">

        <argument
            android:name="arg_id"
            android:defaultValue="0"
            app:argType="integer" />
        <argument
            android:name="arg_image_url"
            android:defaultValue=""
            app:argType="string" />
    </fragment>

</navigation>
