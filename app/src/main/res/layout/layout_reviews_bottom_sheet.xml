<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewState"
            type="com.ugurbuga.followtvmovie.ui.moviedetail.MovieReviewViewState" />
    </data>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/review_recycler_view"
        spacePaddingBottom="@{@dimen/padding_8}"
        spacePaddingLeft="@{@dimen/padding_8}"
        spacePaddingTop="@{@dimen/padding_8}"
        submitList="@{viewState.reviewList}"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_192"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_review" />

</layout>