<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.ugurbuga.followtvmovie.domain.moviedetail.model.detail.TrailerUIModel" />
    </data>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:padding="5dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/movie_trailer_image"
                imageUrl="@{item.videoUrl}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                tools:src="@mipmap/ic_launcher" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="25dp"
                app:srcCompat="@drawable/ic_play_arrow" />
        </FrameLayout>

        <TextView
            android:id="@+id/movie_trailer_name"
            style="@style/FTMText.Light.13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="@{item.name}"
            tools:text="testsdfsdf" />
    </LinearLayout>
</layout>