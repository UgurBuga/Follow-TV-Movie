<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewState"
            type="com.ugurbuga.followtvmovie.ui.moviedetail.MovieDetailViewState" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".MainActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:elevation="@dimen/elevation_8"
                app:collapsedTitleGravity="center"
                app:collapsedTitleTextColor="@color/tertiary_color"
                app:contentScrim="@color/quaternary_color"
                app:expandedTitleGravity="center|bottom"
                app:expandedTitleTextColor="@color/quaternary_color"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                app:toolbarId="@id/toolbar">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    android:foreground="@drawable/background_item_poster"
                    android:scaleType="centerCrop"
                    android:transitionName="@string/image_big"
                    app:layout_collapseMode="parallax"
                    tools:srcCompat="@tools:sample/avatars" />

                <com.ugurbuga.followtvmovie.view.toolbar.FTMToolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@android:color/transparent"
                    android:elevation="@dimen/elevation_0"
                    app:contentInsetStart="0dp"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                    app:title="@{viewState.movieDetail.title}" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.ugurbuga.followtvmovie.view.FTMTextView
                    style="@style/FTMText.Regular.14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:padding="@dimen/padding_16"
                    android:text="@{viewState.movieDetail.overview}"
                    tools:text="Açıklama" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/genre_recycler_view"
                    spacePaddingBottom="@{@dimen/padding_8}"
                    spacePaddingStart="@{@dimen/padding_8}"
                    spacePaddingTop="@{@dimen/padding_8}"
                    submitList="@{viewState.movieDetail.genres}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_8"
                    app:layoutManager="com.google.android.flexbox.FlexboxLayoutManager"
                    tools:listitem="@layout/item_genre" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/trailer_recycler_view"
                    spacePaddingBottom="@{@dimen/padding_8}"
                    spacePaddingStart="@{@dimen/padding_8}"
                    spacePaddingTop="@{@dimen/padding_8}"
                    submitList="@{viewState.trailers}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_8"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_trailer" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/favorite_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end|bottom"
            android:layout_margin="@dimen/margin_16"
            android:backgroundTint="@color/primary_color"
            android:src="@{viewState.favorite ? @drawable/ic_favorite : @drawable/ic_not_favorite}"
            app:tint="@color/quaternary_color"
            tools:src="@drawable/ic_favorite" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/reviews_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start|bottom"
            android:layout_margin="@dimen/margin_16"
            android:backgroundTint="@color/primary_color"
            android:src="@drawable/ic_review"
            app:tint="@color/quaternary_color" />


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
