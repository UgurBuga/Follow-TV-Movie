<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewState"
            type="com.ugurbuga.followtvmovie.ui.moviedetail.MovieDetailViewState" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinate_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".MainActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_350"
                android:elevation="@dimen/elevation_8"
                app:collapsedTitleTextAppearance="@style/CollapsedAppBar"
                app:collapsedTitleTextColor="@color/primary_color"
                app:contentInsetStartWithNavigation="0dp"
                app:contentScrim="@color/quaternary_color"
                app:expandedTitleGravity="center|bottom"
                app:expandedTitleTextAppearance="@style/ExpandedAppBar"
                app:expandedTitleTextColor="@color/always_white"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                app:toolbarId="@id/toolbar">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    android:foreground="@drawable/background_item_poster"
                    android:scaleType="centerCrop"
                    android:transitionName="@string/image_big"
                    app:layout_collapseMode="parallax"
                    tools:srcCompat="@tools:sample/avatars" />

                <com.ugurbuga.followtvmovie.view.toolbar.FTMToolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@android:color/transparent"
                    android:elevation="@dimen/elevation_0"
                    app:contentInsetStart="0dp"
                    app:contentInsetStartWithNavigation="0dp"
                    app:layout_collapseMode="pin"
                    app:navigation_type="back_button"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                    app:title="@{viewState.movieDetail.title}" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_vieww"
            visible="@{viewState.movieDetail != null}"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/padding_16"
                    tools:context=".MainActivity">

                    <com.ugurbuga.followtvmovie.view.FTMTextView
                        android:id="@+id/overview"
                        style="@style/FTMText.Regular.14"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:text="@{viewState.movieDetail.overview}"
                        app:layout_constraintEnd_toStartOf="@id/progress_bar"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="Açıklama \nAçıklama \nAçıklama \nAçıklama \nAçıklama \nAçıklama" />

                    <ProgressBar
                        android:id="@+id/progress_bar"
                        style="@style/CircularDeterminateProgressBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:progress="@{viewState.movieDetail.getProgressValue()}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/overview"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:progress="60" />

                    <com.ugurbuga.followtvmovie.view.FTMTextView
                        android:id="@+id/text_view_progress"
                        style="@style/FTMText.Light.13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{String.valueOf(viewState.movieDetail.voteAverage)}"
                        app:layout_constraintBottom_toBottomOf="@+id/progress_bar"
                        app:layout_constraintEnd_toEndOf="@+id/progress_bar"
                        app:layout_constraintStart_toStartOf="@+id/progress_bar"
                        app:layout_constraintTop_toTopOf="@+id/progress_bar"
                        tools:text="7.7" />

                    <androidx.appcompat.widget.AppCompatToggleButton
                        android:id="@+id/favorite_button"
                        android:layout_width="@dimen/width_50"
                        android:layout_height="@dimen/height_50"
                        android:layout_marginTop="@dimen/margin_8"
                        android:background="@drawable/favorite_toggle_button"
                        android:checked="@{viewState.favorite}"
                        android:gravity="center"
                        android:textOff=""
                        android:textOn=""
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/overview"
                        app:layout_constraintTop_toBottomOf="@id/progress_bar" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_16"
                    android:orientation="horizontal">

                    <com.ugurbuga.followtvmovie.view.FTMTextView
                        style="@style/FTMText.Regular.14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/release_date" />

                    <com.ugurbuga.followtvmovie.view.FTMTextView
                        style="@style/FTMText.Regular.14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{viewState.movieDetail.releaseDate}" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/genre_recycler_view"
                    spacePaddingBottom="@{@dimen/padding_8}"
                    spacePaddingStart="@{@dimen/padding_8}"
                    spacePaddingTop="@{@dimen/padding_8}"
                    submitList="@{viewState.movieDetail.genres}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="false"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_8"
                    app:layoutManager="com.google.android.flexbox.FlexboxLayoutManager"
                    tools:listitem="@layout/item_genre" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_16" />

                <com.ugurbuga.followtvmovie.view.FTMTextView
                    style="@style/FTMText.SemiBold.20.Primary"
                    visible="@{viewState.trailers.size() > 0}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_16"
                    android:text="@string/videos" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/trailer_recycler_view"
                    spacePaddingBottom="@{@dimen/padding_8}"
                    spacePaddingStart="@{@dimen/padding_8}"
                    spacePaddingTop="@{@dimen/padding_8}"
                    submitList="@{viewState.trailers}"
                    visible="@{viewState.trailers.size() > 0}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="false"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_8"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_trailer" />

                <com.ugurbuga.followtvmovie.view.FTMTextView
                    style="@style/FTMText.SemiBold.20.Primary"
                    visible="@{viewState.images.size() > 0}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_16"
                    android:text="@string/images" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/image_recycler_view"
                    spacePaddingBottom="@{@dimen/padding_8}"
                    spacePaddingStart="@{@dimen/padding_8}"
                    spacePaddingTop="@{@dimen/padding_8}"
                    submitList="@{viewState.images}"
                    visible="@{viewState.images.size() > 0}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="false"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_8"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_image" />

                <com.ugurbuga.followtvmovie.view.FTMTextView
                    style="@style/FTMText.SemiBold.20.Primary"
                    visible="@{viewState.casts.size() > 0}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_16"
                    android:text="@string/cast" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/cast_recycler_view"
                    spacePaddingBottom="@{@dimen/padding_8}"
                    spacePaddingStart="@{@dimen/padding_8}"
                    spacePaddingTop="@{@dimen/padding_8}"
                    submitList="@{viewState.casts}"
                    visible="@{viewState.casts.size() > 0}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="false"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_8"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_cast" />

                <com.ugurbuga.followtvmovie.view.FTMTextView
                    style="@style/FTMText.SemiBold.20.Primary"
                    visible="@{viewState.recommendation.posterList.size() > 0}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_16"
                    android:text="@string/recommendations" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recommendation_recycler_view"
                    spacePaddingBottom="@{@dimen/padding_8}"
                    spacePaddingStart="@{@dimen/padding_8}"
                    spacePaddingTop="@{@dimen/padding_8}"
                    submitList="@{viewState.recommendation.posterList}"
                    visible="@{viewState.recommendation.posterList.size() > 0}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="false"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_8"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_poster" />

                <com.ugurbuga.followtvmovie.view.FTMTextView
                    style="@style/FTMText.SemiBold.20.Primary"
                    visible="@{viewState.similarMovie.posterList.size() > 0}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_16"
                    android:text="@string/similar_movies" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/similar_movies_recycler_view"
                    spacePaddingBottom="@{@dimen/padding_8}"
                    spacePaddingStart="@{@dimen/padding_8}"
                    spacePaddingTop="@{@dimen/padding_8}"
                    submitList="@{viewState.similarMovie.posterList}"
                    visible="@{viewState.similarMovie.posterList.size() > 0}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="false"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_8"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_poster" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_16"
                    android:layout_marginBottom="@dimen/margin_16">

                    <com.ugurbuga.followtvmovie.view.FTMButton
                        android:id="@+id/reviews_button"
                        visible="@{viewState.movieDetail != null}"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/reviews"
                        app:cornerRadius="@dimen/radius_8"
                        app:icon="@drawable/ic_review" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imdb_button"
                        visible="@{viewState.externalUrls.hasImdbId()}"
                        android:layout_width="@dimen/width_30"
                        android:layout_height="@dimen/height_30"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/margin_8"
                        android:src="@drawable/imdb_logo"
                        app:shapeAppearance="@style/RadiusShapeableImageView" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/facebook_button"
                        visible="@{viewState.externalUrls.hasFacebookId()}"
                        android:layout_width="@dimen/width_30"
                        android:layout_height="@dimen/height_30"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/margin_8"
                        android:src="@drawable/facebook_logo"
                        app:shapeAppearance="@style/RadiusShapeableImageView" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/twitter_button"
                        visible="@{viewState.externalUrls.hasTwitterId()}"
                        android:layout_width="@dimen/width_30"
                        android:layout_height="@dimen/height_30"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/margin_8"
                        android:src="@drawable/twitter_logo"
                        app:shapeAppearance="@style/RadiusShapeableImageView" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/instagram_button"
                        visible="@{viewState.externalUrls.hasInstagramId()}"
                        android:layout_width="@dimen/width_30"
                        android:layout_height="@dimen/height_30"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/margin_8"
                        android:src="@drawable/instagram_logo"
                        app:shapeAppearance="@style/RadiusShapeableImageView" />
                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
