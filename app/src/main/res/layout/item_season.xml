<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.ugurbuga.followtvmovie.domain.tvshowdetail.model.SeasonUIModel" />

    </data>

    <LinearLayout
        android:id="@+id/season_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <com.ugurbuga.followtvmovie.view.FTMTextView
            style="@style/FTMText.SemiBold.15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableEnd="@drawable/ic_arrow_right"
            android:padding="@dimen/margin_12"
            android:text="@{item.name}"
            tools:text="@string/seasons" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_0_5"
            android:background="@color/grey_200" />

    </LinearLayout>
</layout>


